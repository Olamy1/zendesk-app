########################################
# Zendesk App (v2) - Example Environment
########################################

# App
APP_ENV=local
DEBUG=false
# Allow local dev tools; add ZAT preview origin when using Zendesk Apps Tools
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4567

# Zendesk (current services usage)
ZENDESK_SUBDOMAIN=your_subdomain
ZENDESK_EMAIL=agent@example.org
ZENDESK_API_TOKEN=replace_me
OAPS_GROUP_IDS=12345,67890

# Zendesk (settings template aliases)
ZENDESK_DOMAIN=your_subdomain
ZENDESK_TOKEN=replace_me

# Microsoft Graph / SharePoint
TENANT_ID=00000000-0000-0000-0000-000000000000
CLIENT_ID=00000000-0000-0000-0000-000000000000
CLIENT_SECRET=replace_me
SHAREPOINT_SITE_HOST=contoso.sharepoint.com
SHAREPOINT_SITE_NAME=YourSiteName
SHAREPOINT_DOC_LIB=Shared Documents
SHAREPOINT_FOLDER_PATH=Cross-functional/Zendesk/Bi-Weekly Reports

# SharePoint (settings template aliases)
SHAREPOINT_SITE_URL=https://contoso.sharepoint.com/sites/YourSiteName
SHAREPOINT_CLIENT_ID=${CLIENT_ID}
SHAREPOINT_CLIENT_SECRET=${CLIENT_SECRET}

# Email/SMTP
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
EMAIL_USER=sender@example.org
EMAIL_PASS=replace_me
EMAIL_TO=recipient1@example.org,recipient2@example.org

# Email (settings template aliases)
SMTP_USER=${EMAIL_USER}
SMTP_PASS=${EMAIL_PASS}

# Optional logging
EMAIL_LOG_PATH=backend/email_log.csv
